@model Fleet.Models.Home.HomeACModel
@{
    ViewBag.Title = "Create Aircraft";
}

<form asp-controller="home" asp-action="create" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.aircraft.Registration" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="@Model.aircraft.Registration" class="form-control" />
        </div>
        <label asp-for="@Model.aircraft.Effectivity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="@Model.aircraft.Effectivity" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.aircraft.Model" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="@Model.aircraft.Model" class="form-control" />
        </div>
        <label asp-for="@Model.aircraft.ModelType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="@Model.aircraft.ModelType" class="form-control" />
        </div>
        <label asp-for="@Model.aircraft.Engine" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="@Model.aircraft.Engine" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.aircraft.BodyNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="@Model.aircraft.BodyNo" class="form-control" />
        </div>
        <label asp-for="@Model.aircraft.LineNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="@Model.aircraft.LineNo" class="form-control" />
        </div>
        <label asp-for="@Model.aircraft.SerialNo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-2">
            <input asp-for="@Model.aircraft.SerialNo" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.aircraft.DeliveryDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.aircraft.DeliveryDate" class="form-control" />
        </div>
    </div>
    <div class="form-group row text-center">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-controller="home" asp-action="index" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>